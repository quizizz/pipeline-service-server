{
  "name": "app",
  "version": "0.0.1",
  "description": "Quizizz Application",
  "author": "Quizizz Inc",
  "private": true,
  "license": "PRIVATE",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "tsc && cp -rf src/others/ dist/others",
    "build:ci": "tsc --project tsconfig.build.json && cp -rf src/others/ dist/others",
    "compile": "tsc",
    "watch": "tsc --watch",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "SERVICE=template node -r module-alias/register.js --enable-source-maps dist/main.js",
    "local": "rimraf dist && SERVICE=template \"nodemon\"",
    "prod:start": "NODE_ENV=prod npm start",
    "dev:start": "NODE_ENV=dev npm start",
    "local:start": "NODE_ENV=local npm run local",
    "prod:server": "APP_TYPE=server npm run prod:start",
    "dev:server": "APP_TYPE=server npm run dev:start",
    "local:server": "APP_TYPE=server npm run local:start",
    "local:server:pretty": "PRETTY_LOGS=yes npm run local:server",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:unit": "JEST_JUNIT_OUTPUT_DIR=tests/results/ jest ./tests/unit --detectOpenHandles",
    "test:unit:watch": "JEST_JUNIT_OUTPUT_DIR=tests/results/ jest ./tests/unit --watch --detectOpenHandles",
    "test:unit:ci": "JEST_JUNIT_OUTPUT_DIR=tests/results/ jest --ci --detectOpenHandles --collect-coverage --coverage --json --outputFile=tests/reports/test-report.json",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@aws-sdk/client-ssm": "^3.44.0",
    "@aws-sdk/client-sts": "^3.43.0",
    "@quizizz/service-communication": "github:quizizz/service-communication-wrapper#v0.0.11",
    "@quizizz/stacktrace-utils": "github:quizizz/stacktrace-utils#v0.1.5",
    "@types/module-alias": "^2.0.1",
    "@types/supertest": "^2.0.11",
    "body-parser": "^1.19.2",
    "bson-objectid": "^2.0.2",
    "@quizizz/cassandra": "github:quizizz/cassandra-wrapper",
    "concurrently": "^6.4.0",
    "cookie-parser": "^1.4.6",
    "express": "^4.17.1",
    "inversify": "^6.0.1",
    "is_js": "^0.9.0",
    "joi": "^17.7.0",
    "json-stringify-safe": "^5.0.1",
    "mapofenv": "^0.0.10",
    "module-alias": "^2.2.2",
    "nodemon": "^2.0.15",
    "pino": "^8.4.2",
    "pino-pretty": "^9.1.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "safely-parse-json": "^0.1.0",
    "supertest": "^6.1.6"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.3",
    "@types/express": "^4.17.13",
    "@types/jest": "27.0.2",
    "@types/node": "^16.0.0",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.2.5",
    "jest-junit": "^13.0.0",
    "pino-pretty": "^7.6.1",
    "prettier": "^2.3.2",
    "ts-jest": "^27.0.3",
    "typescript": "^4.3.5"
  },
  "_moduleAliases": {
    "@app": "./dist"
  }
}
